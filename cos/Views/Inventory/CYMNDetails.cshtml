@{
    Layout = "~/Views/Shared/UserDash/_Layoutdb.cshtml";
    ViewData["Title"] = "Login Page";
}




<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">CYMN Summary</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body card-dashboard">
                 @*    <p class="card-text">ekyc summary</p> *@
                    <div class="table-responsive">
                        <table id="kycTable" class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Count</th>
                                </tr>
                            </thead>
                            <tbody id="table-body-postpaid"></tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="postDetailsModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4>CYMN Details</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">
        <table class="table table-bordered" id="detailsTable">
          <thead>
            <tr>
              <th>Circle Code</th>
              <th>GSMNO</th>
            </tr>
          </thead>
          <tbody id="detailsTableBody">
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>


   
@section Scripts {
    <script>
          $(document).ready(function () {

                  GetCYMNSummary();
           

        });




        function GetCYMNSummary()
        {
            console.log("Hi entered");
            // Destroy DataTable if already initialized
            if ($.fn.DataTable.isDataTable('#kycTable')) {
                $('#kycTable').DataTable().clear().destroy();
            }

            var tableBody = $('#table-body-postpaid');
            tableBody.html('<tr style="text-align:center"><td colspan="6">Loading...</td></tr>');

            $.ajax({
                type: 'POST',
                url: "/Inventory/GetCYMNSummary",
                headers: {
                    "Content-type": "application/x-www-form-urlencoded; charset=UTF-8",
                    'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
                },
                success: function (data) {

                    var tableString = '';
                    tableString += '<tr><td>Total</td><td>' + (data["remaining_nums"]+data["reserved_nums"]) + '</td></tr>';
                    tableString += '<tr><td>Remaining</td><td><span class="view-post-details text-primary" style="cursor:pointer; text-decoration: underline;"  data-circle="'+data.circle_code+'" data-status="9">' + data["remaining_nums"] + '</span></td></tr>';
                    tableString += '<tr><td>Reserved</td><td><span class="view-post-details text-primary" style="cursor:pointer; text-decoration: underline;"  data-circle="'+data.circle_code+'" data-status="99">' + data["reserved_nums"] + '</span></td></tr>';
                    tableBody.html(tableString);

                    // Reinitialize the DataTable
                    $('#kycTable').DataTable({
                        "ordering": true,
                        "paging": true,
                        "searching": true
                    });

                }
            });
        }


 $(document).on("click", ".view-post-details", function (e) {
    e.preventDefault();
    let circle = $(this).data("circle");
    let status = $(this).data("status");

    LoadPostDetails(circle, status);
});


function LoadPostDetails(circle,  status) {

    $("#detailsTableBody").html("<tr><td colspan='6'>Loading...</td></tr>");

    $.ajax({
        type: "POST",
        url: "/Inventory/GetCYMNDetails",
        data: {
            circle_code: circle,
            status: status
        },
        success: function (data) {

            var html = "";

            for (var i = 0; i < data.length; i++) {
                html += "<tr>";
                html += "<td>" + data[i].circle_code + "</td>";
                html += "<td>" + data[i].gsmno + "</td>";
                html += "</tr>";
            }

            $("#detailsTableBody").html(html);

            $("#postDetailsModal").modal("show"); // open modal
        }
    });
}


</script>

}